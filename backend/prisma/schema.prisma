generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// =======================
// AUTH & USERS
// =======================
model User {
  id           String   @id @default(uuid())
  fullName     String
  email        String   @unique
  password     String
  role         String
  phoneNumber  String
  // sessions     Session[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([id])
  @@index([email])
}

